# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=meeting_registration

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=change-this-secret-key-in-production

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-admin-password

# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379

# Google Apps Script Integration
GOOGLE_SCRIPT_URL=https://script.google.com/macros/s/YOUR-SCRIPT-ID/exec

# Session Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS

# Application Settings
REGISTRATION_COOLDOWN=5  # seconds between registrations from same IP
MAX_REGISTRATIONS_PER_IP=50  # maximum registrations from single IP per day
