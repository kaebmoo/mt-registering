# =====================================================
# Meeting Registration System - Environment Variables
# =====================================================
# Copy this file to .env and update with your values
# =====================================================

# ===== DATABASE CONFIGURATION =====
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=meeting_registration

# ===== FLASK CONFIGURATION =====
# Environment: development, production, testing
FLASK_ENV=production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-random-secret-key-in-production

# URL Configuration (for reverse proxy/nginx)
# Leave empty if running directly, set to /your-path if behind proxy
APPLICATION_ROOT=
# http or https
PREFERRED_URL_SCHEME=https

# ===== ADMIN CONFIGURATION =====
# Default admin credentials (CHANGE IN PRODUCTION!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-admin-password

# ===== REDIS CONFIGURATION =====
# Used for caching, rate limiting, and message queue
REDIS_URL=redis://localhost:6379

# ===== EMAIL CONFIGURATION (SMTP) =====
# For sending OTP emails
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=465
# Use SSL/TLS
MAIL_USE_TLS=true
# Your email credentials
MAIL_USERNAME=your-email@gmail.com
# For Gmail, use App-specific password, not regular password
MAIL_PASSWORD=your-app-specific-password
# Display name in emails
MAIL_FROM_NAME=Meeting Registration System
# From email address (usually same as MAIL_USERNAME)
MAIL_FROM=noreply@yourdomain.com

# ===== SECURITY SETTINGS =====
# Allowed email domains for registration (comma separated)
# Empty = allow all domains
# Example: company.com,organization.org
ALLOWED_EMAIL_DOMAINS=

# OTP Configuration
OTP_VALIDITY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# ===== SESSION CONFIGURATION =====
# Set to True in production with HTTPS
SESSION_COOKIE_SECURE=True
# Session timeout in hours
SESSION_TIMEOUT_HOURS=2

# ===== RATE LIMITING =====
# Cooldown between registrations from same IP (seconds)
REGISTRATION_COOLDOWN=5
# Max registrations from single IP per day
MAX_REGISTRATIONS_PER_IP=50

# ===== TIMEZONE CONFIGURATION =====
# Server timezone for data processing
TIMEZONE=Asia/Bangkok
# Display timezone for UI
DISPLAY_TIMEZONE=Asia/Bangkok

# Supported timezones:
# Asia/Bangkok     - Thailand (+7)
# Asia/Singapore   - Singapore (+8)
# Asia/Tokyo       - Japan (+9)
# America/New_York - New York (-5/-4 DST)
# Europe/London    - London (0/+1 DST)
# UTC              - Universal Time (0)

# ===== GOOGLE SHEETS INTEGRATION (Optional) =====
# Leave empty to disable Google Sheets sync
# Get from Google Apps Script deployment
GOOGLE_SCRIPT_URL=

# ===== LOGGING CONFIGURATION =====
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Enable SQL query logging (set to false in production)
LOG_DATABASE_QUERIES=false

# ===== DATABASE CONNECTION POOL =====
# Advanced settings (optional)
DATABASE_RETRY_COUNT=3
DATABASE_RETRY_DELAY=1
DATABASE_RETRY_BACKOFF=exponential
DATABASE_MAX_RETRY_DELAY=30

# ===== CACHE CONFIGURATION =====
CACHE_KEY_PREFIX=meeting_reg_
CACHE_ACTIVE_MEETING_TIMEOUT=60
CACHE_DEFAULT_TIMEOUT=300
